# ==============================================
# CONFIGURATION MULTI-NŒUDS CAPSULE NETWORK
# ==============================================

# Configuration blockchain principale
NEXT_PUBLIC_CHAIN_ID=capsule-mainnet
NEXT_PUBLIC_ADDRESS_PREFIX=cosmos
NEXT_PUBLIC_DENOM=ucaps
NEXT_PUBLIC_GAS_PRICE=0.025ucaps

# ==============================================
# STRATÉGIE DE SÉLECTION DES NŒUDS
# ==============================================
# Options: PRIORITY_FIRST, LOWEST_LATENCY, ROUND_ROBIN, RANDOM, GEOGRAPHIC_NEAREST
NEXT_PUBLIC_NODE_SELECTION_STRATEGY=PRIORITY_FIRST

# ==============================================
# NŒUDS PRINCIPAUX (Priorité 1-3)
# ==============================================

# Nœud principal US-East (Priorité 1)
NEXT_PUBLIC_PRIMARY_RPC=https://rpc.capsule.network
NEXT_PUBLIC_PRIMARY_REST=https://api.capsule.network
NEXT_PUBLIC_PRIMARY_WS=wss://rpc.capsule.network/websocket

# Nœud Europe (Priorité 2)
NEXT_PUBLIC_EU_RPC=https://rpc-eu.capsule.network
NEXT_PUBLIC_EU_REST=https://api-eu.capsule.network
NEXT_PUBLIC_EU_WS=wss://rpc-eu.capsule.network/websocket

# Nœud Asie (Priorité 3)
NEXT_PUBLIC_ASIA_RPC=https://rpc-asia.capsule.network
NEXT_PUBLIC_ASIA_REST=https://api-asia.capsule.network
NEXT_PUBLIC_ASIA_WS=wss://rpc-asia.capsule.network/websocket

# ==============================================
# NŒUDS DE BACKUP COMMUNAUTAIRES (Priorité 4-6)
# ==============================================

# Validators communautaires
NEXT_PUBLIC_VALIDATOR1_RPC=https://rpc1.capsule-validators.com
NEXT_PUBLIC_VALIDATOR1_REST=https://api1.capsule-validators.com

NEXT_PUBLIC_VALIDATOR2_RPC=https://rpc2.capsule-validators.com
NEXT_PUBLIC_VALIDATOR2_REST=https://api2.capsule-validators.com

# ==============================================
# CONFIGURATION DE DÉCOUVERTE AUTOMATIQUE
# ==============================================

# Activer la découverte automatique de nœuds
NEXT_PUBLIC_ENABLE_NODE_DISCOVERY=true

# Intervalle de découverte en millisecondes (défaut: 1 heure)
NEXT_PUBLIC_DISCOVERY_INTERVAL=3600000

# Sources de découverte (séparées par des virgules)
NEXT_PUBLIC_DISCOVERY_SOURCES=cosmos-registry,official-api,community-directory

# ==============================================
# SURVEILLANCE DE SANTÉ
# ==============================================

# Activer la surveillance de santé des nœuds
NEXT_PUBLIC_ENABLE_HEALTH_MONITORING=true

# Intervalle de vérification de santé en millisecondes (défaut: 30 secondes)
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=30000

# Timeout pour les vérifications de santé en millisecondes
NEXT_PUBLIC_HEALTH_CHECK_TIMEOUT=5000

# Nombre maximum de tentatives avant de marquer un nœud comme défaillant
NEXT_PUBLIC_MAX_RETRY_ATTEMPTS=3

# ==============================================
# CIRCUIT BREAKER
# ==============================================

# Nombre d'échecs avant d'ouvrir le circuit breaker
NEXT_PUBLIC_CIRCUIT_BREAKER_THRESHOLD=5

# Durée de récupération du circuit breaker en millisecondes (défaut: 1 minute)
NEXT_PUBLIC_CIRCUIT_BREAKER_TIMEOUT=60000

# ==============================================
# LOAD BALANCING
# ==============================================

# Activer le load balancing
NEXT_PUBLIC_ENABLE_LOAD_BALANCING=true

# Poids des régions (plus élevé = plus de trafic)
NEXT_PUBLIC_REGION_WEIGHT_US=10
NEXT_PUBLIC_REGION_WEIGHT_EU=8
NEXT_PUBLIC_REGION_WEIGHT_ASIA=8
NEXT_PUBLIC_REGION_WEIGHT_GLOBAL=5

# ==============================================
# FALLBACK ET DÉVELOPPEMENT
# ==============================================

# Activer les nœuds de fallback publics
NEXT_PUBLIC_ENABLE_FALLBACK_NODES=true

# Nœud local pour développement (faible priorité)
NEXT_PUBLIC_LOCAL_RPC=http://localhost:26657
NEXT_PUBLIC_LOCAL_REST=http://localhost:1317
NEXT_PUBLIC_LOCAL_WS=ws://localhost:26657/websocket

# Mode développement (utilise des données simulées si les nœuds ne répondent pas)
NEXT_PUBLIC_DEVELOPMENT_MODE=false

# ==============================================
# IPFS MULTI-GATEWAY
# ==============================================

# Gateways IPFS (séparées par des virgules)
NEXT_PUBLIC_IPFS_GATEWAYS=https://gateway.ipfs.io,https://cloudflare-ipfs.com,https://gateway.pinata.cloud

# API IPFS primaire
NEXT_PUBLIC_IPFS_API=http://localhost:5001

# ==============================================
# MONITORING ET ANALYTICS
# ==============================================

# Activer les analytics de performance des nœuds
NEXT_PUBLIC_ENABLE_NODE_ANALYTICS=true

# URL pour envoyer les métriques (optionnel)
NEXT_PUBLIC_METRICS_ENDPOINT=https://metrics.capsule.network/api/v1/metrics

# Clé API pour les métriques (optionnel)
NEXT_PUBLIC_METRICS_API_KEY=your-metrics-api-key

# ==============================================
# CONFIGURATION AVANCÉE
# ==============================================

# Activer le debug des connexions réseau
NEXT_PUBLIC_ENABLE_NETWORK_DEBUG=false

# Timeout global pour toutes les requêtes réseau
NEXT_PUBLIC_GLOBAL_TIMEOUT=30000

# Retry delay multiplier (délai exponentiel)
NEXT_PUBLIC_RETRY_DELAY_MULTIPLIER=1.5

# Cache TTL pour les réponses de nœuds en millisecondes
NEXT_PUBLIC_NODE_CACHE_TTL=5000

# ==============================================
# SÉCURITÉ RÉSEAU
# ==============================================

# Vérifier les certificats SSL (production: true)
NEXT_PUBLIC_VERIFY_SSL=true

# Domaines autorisés pour les nœuds (séparés par des virgules)
NEXT_PUBLIC_ALLOWED_NODE_DOMAINS=capsule.network,capsule-validators.com,cosmos.network

# User Agent pour les requêtes
NEXT_PUBLIC_USER_AGENT=Capsule-Network-Client/1.0

# ==============================================
# EXEMPLE DE CONFIGURATION PAR ENVIRONNEMENT
# ==============================================

# Pour production
# NEXT_PUBLIC_CHAIN_ID=capsule-mainnet
# NEXT_PUBLIC_NODE_SELECTION_STRATEGY=PRIORITY_FIRST
# NEXT_PUBLIC_ENABLE_FALLBACK_NODES=true
# NEXT_PUBLIC_DEVELOPMENT_MODE=false

# Pour testnet
# NEXT_PUBLIC_CHAIN_ID=capsule-testnet-1
# NEXT_PUBLIC_NODE_SELECTION_STRATEGY=ROUND_ROBIN
# NEXT_PUBLIC_ENABLE_FALLBACK_NODES=true
# NEXT_PUBLIC_DEVELOPMENT_MODE=false

# Pour développement local
# NEXT_PUBLIC_CHAIN_ID=capsule-devnet
# NEXT_PUBLIC_NODE_SELECTION_STRATEGY=PRIORITY_FIRST
# NEXT_PUBLIC_ENABLE_FALLBACK_NODES=false
# NEXT_PUBLIC_DEVELOPMENT_MODE=true